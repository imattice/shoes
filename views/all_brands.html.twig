<html>
    <head>
        <title>All Stores</title>
    </head>
    <body>

        {% if brands is not empty %}
            <p>Here are all of the availalbe brands:</p>
            <ul>
                {% for brand in brands %}
                <li><a href="/brand/{{ brand.getId }}">{{ brand.getBrandName }}</li></a>
                {% endfor %}
            </ul>
        {% else %}
            <p>Currently, there are no shoe brands available.</p>
        {% endif %}


        <form action='/add_brands' method='post'>
            <h2>Add a New Brand</h2>

            <label for='brand_name'><strong>Brand Name:</strong></label>
            <input id='brand_name' name='brand_name' type='text' required>

            <button type='submit'>Add Brand</button>
        </form>
        <br>


        <form action='/clear_brands' method='post'>
            <button type='submit'>Clear All Brands</button>
        </form>
        <br>
        <br>


        <a href = '/'>Home</a>
    </body>
</html>
